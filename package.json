{
  "name": "f1-ai-assistant",
  "version": "1.0.0",
  "description": "F1 Mercedes AI Assistant with Ollama",
  "main": "main.js",

"scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "dev:css": "tailwindcss -i ./src/tailwind.css -o ./src/tailwind-output.css --watch"
  },
  "keywords": [
    "ai",
    "assistant",
    "ollama",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19"
  },
  "build": {
    "appId": "com.f1ai.assistant",
    "productName": "F1 AI Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "fs-extra": "^11.3.3",
    "marked": "^17.0.1",
    "pdf-parse": "^2.4.5",
    "uuid": "^13.0.0"
  }
}
